<!DOCTYPE html>
<html>

<head>
  <title>AccessMap OAuth2Orize Login</title>
  <!-- Needed for mobile sites to work -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Style sheets -->
  <link rel="stylesheet" type="text/css" href="/stylesheets/pure-min.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/base.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/sign-in-modules.css">
</head>
<body>

<!-- HTML login screen form -->
<form action="/reset/<%= resetToken %>" method="post" class="pure-form pure-form-stacked">
  <fieldset>
    <!-- Upper box with Title, username, and password -->
    <div class="upper-box">
      <!-- Title -->
      <div>
        <h1 class="title-padding">Reset Password</h1>
      </div>
      <div class="pure-control-group">
        <!-- Username label and input -->
        <label class="labels" for="password">New Password:</label>

        <div class="input-fields">
          <input class="pure-input-1 input-fields" id="password" type="password" name="password" required/>
        </div>
      </div>
      <div class="pure-control-group">
        <label class="labels" for="confirm_password">Confirm Password:</label>

        <div class="input-fields">
          <input class="pure-input-1 input-fields" id="confirm_password" type="password" name="confirm_password" required/>
        </div>
      </div>
    </div>
    <!-- Bottom box with Sign in -->
    <div class="bottom-box">
      <div class="pure-controls sign-in-button">
        <button type="submit" value="Submit" class="pure-button pure-button-primary">Reset Password</button>
      </div>
    </div>
  </fieldset>
  <div class="from-text">
    <a href="https://github.com/FrankHassanabad/Oauth2orizeRecipes">
      From OAuth2OrizeRecipes
    </a>
  </div>
</form>

</body>
</html>
